<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:id="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_id_placeholder_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgThumbnail"
                app:layout_constraintBottom_toBottomOf="@id/imgThumbnail"/>

        <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txtId"/>

        <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_name_placeholder_text"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@id/imgThumbnail"
                app:layout_constraintTop_toTopOf="@id/imgThumbnail"
                app:layout_constraintBottom_toBottomOf="@id/imgThumbnail"/>

        <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgThumbnail"
                app:layout_constraintBottom_toBottomOf="@id/imgThumbnail"/>

    </android.support.constraint.ConstraintLayout>
</layout>