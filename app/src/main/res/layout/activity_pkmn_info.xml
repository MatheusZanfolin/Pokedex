<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
                android:id="@+id/imgFrontDefault"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
                android:id="@+id/imgFrontFemale"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/imgFrontDefault"
                app:layout_constraintBottom_toBottomOf="@id/imgFrontDefault"
                app:layout_constraintRight_toLeftOf="@id/imgFrontDefault"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/img_front_female_label"
                app:layout_constraintTop_toBottomOf="@id/imgFrontFemale"
                app:layout_constraintLeft_toLeftOf="@id/imgFrontFemale"
                app:layout_constraintRight_toRightOf="@id/imgFrontFemale"/>

        <ImageView
                android:id="@+id/imgFrontShiny"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/imgFrontDefault"
                app:layout_constraintBottom_toBottomOf="@id/imgFrontDefault"
                app:layout_constraintLeft_toRightOf="@id/imgFrontDefault"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/img_front_shiny_label"
                app:layout_constraintTop_toBottomOf="@id/imgFrontShiny"
                app:layout_constraintLeft_toLeftOf="@id/imgFrontShiny"
                app:layout_constraintRight_toRightOf="@id/imgFrontShiny"/>

        <TextView
                android:id="@+id/txtInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgFrontDefault"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.Guideline
                android:id="@+id/glPkmnInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

        <TextView
                android:id="@+id/txtTypesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/txt_types_label_text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtInfoName"
                app:layout_constraintRight_toLeftOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="@id/txtTypesLabel"
                app:layout_constraintBottom_toBottomOf="@id/txtTypesLabel"
                app:layout_constraintLeft_toRightOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_weight_label_text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtTypesLabel"
                app:layout_constraintRight_toLeftOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="@id/txtWeightLabel"
                app:layout_constraintBottom_toBottomOf="@id/txtWeightLabel"
                app:layout_constraintLeft_toRightOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtHeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_height_label_text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtWeightLabel"
                app:layout_constraintRight_toLeftOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="@id/txtHeightLabel"
                app:layout_constraintBottom_toBottomOf="@id/txtHeightLabel"
                app:layout_constraintLeft_toRightOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtAbilitiesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_abilities_label_text"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/txtHeightLabel"
                app:layout_constraintRight_toLeftOf="@id/glPkmnInfo"/>

        <TextView
                android:id="@+id/txtAbilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="@id/txtAbilitiesLabel"
                app:layout_constraintBottom_toBottomOf="@id/txtAbilitiesLabel"
                app:layout_constraintLeft_toRightOf="@id/glPkmnInfo"/>

    </android.support.constraint.ConstraintLayout>
</layout>